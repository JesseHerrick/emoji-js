#!/usr/bin/env ruby

require "emoji-js"

trap("SIGINT") { abort "INTERRUPTED: Generation of emoji.js files not complete." }

puts "Project path: (default: current directory) "
project_path = gets.chomp
project_path = Dir.pwd if project_path.empty?

emoji = EmojiJS::Generate.new(project_path)
emoji.coffeescript
emoji.emoji_images